<div>
  <div>
    <h1>
      All boards
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new board
    </h2>

    <form action="/insert_board" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Add board
      </button>
    </form>
  </div>
</div>


<div class="mx-auto p-5" style="width: 300px">
  <div class="card" style="width: 18rem;">
    <div class="card-header d-flex justify-content-between">
      <p>All boards</p>
      <a href="#" class="btn btn-outline-success">Go somewhere</a>
    </div>
    <ul class="list-group list-group-flush">
      <% @list_of_boards.each do |a_board| %>
        <li class="list-group-item">
          <a href="/boards/<%= a_board.id %>">
            <%= a_board.name %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
